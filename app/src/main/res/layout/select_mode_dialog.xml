        android:background="@drawable/dialog_shape">
        <!--mode-->
        <LinearLayout
            android:id="@+id/text"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
