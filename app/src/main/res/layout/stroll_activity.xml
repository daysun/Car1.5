<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--首部-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#002644"
        android:orientation="vertical"
        android:id="@+id/top">
        <ImageButton
            android:id="@+id/help_img"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/title_btn_bg"
            android:src="@drawable/return_left" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#6c99bb"
            android:text="巡逻路线"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>
    <!--房屋-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:id="@+id/lujing">
    </LinearLayout>
    <!--功能键-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <!--参数设置-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/house_set"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true" >
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="参数设置"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </RelativeLayout>
            <!--撤销-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:id="@+id/undo"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true" >
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="撤销"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </RelativeLayout>
            <!--重置-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reset"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true" >
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="重置"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </RelativeLayout>
            <!--障碍物摆放完成-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:id="@+id/obstacle"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true" >
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="障碍物摆放完成"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </RelativeLayout>
            <!--生成路径-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:id="@+id/path"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true" >
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="生成路径"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </RelativeLayout>
            <!--手动生成路径-->
            <!--<RelativeLayout
                android:layout_width="fill_parent"
                android:id="@+id/byhand"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true" >
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="手动生成路径"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </RelativeLayout>-->
            <!--巡逻时间设置-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:id="@+id/time_xunluo"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true" >
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="巡逻时间设置"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </RelativeLayout>
            <!--使用说明-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:id="@+id/explain"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true" >
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="使用说明"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </RelativeLayout>
            <!--设置完成-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:id="@+id/ok_send"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true" >
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="设置完成"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </RelativeLayout>
        </LinearLayout>
        </ScrollView>

</LinearLayout>