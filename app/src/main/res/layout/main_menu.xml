<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--首部-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#002644"
        android:orientation="vertical"
        android:id="@+id/top">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="主菜单"
            android:textColor="#6c99bb"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <!--圆圈-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top"
        android:id="@+id/middle"
        android:orientation="vertical"
        android:background="#dedede">
        <!--两个圆圈-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal" >
            <!--添加小车-->
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0.2dip"
                android:layout_weight="1" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="0.2dip"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/big_circle_radius"
                        android:layout_height="@dimen/big_circle_radius"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circlr">
                        <RelativeLayout
                            android:layout_width="@dimen/little_circle_radius"
                            android:layout_height="@dimen/little_circle_radius"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/middle_circle_radius"
                            android:layout_marginLeft="@dimen/middle_circle_radius"
                            android:gravity="center"
                            android:id="@+id/add_car"
                            android:background="@drawable/my_account"
                            android:clickable="true" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/add" />
                        </RelativeLayout>
                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="添加小车"
                        android:textColor="#999999"
                        android:textSize="18dp" />
                </LinearLayout>
            </FrameLayout>
            <!--我的设备-->
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0.2dip"
                android:layout_weight="1" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="0.2dip"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="@dimen/big_circle_radius"
                        android:layout_height="@dimen/big_circle_radius"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circlr">
                        <RelativeLayout
                            android:layout_width="@dimen/little_circle_radius"
                            android:layout_height="@dimen/little_circle_radius"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/middle_circle_radius"
                            android:layout_marginLeft="@dimen/middle_circle_radius"
                            android:id="@+id/yy"
                            android:background="@drawable/my_account"
                            android:clickable="true" >

                            <ImageView
                                android:id="@+id/s_ico"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/add_car" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/shouchang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="我的设备"
                        android:textColor="#999999"
                        android:textSize="18dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <!--两个圆圈-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal" >
            <!--常见问题-->
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0.2dip"
                android:layout_weight="1" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="0.2dip"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="@dimen/big_circle_radius"
                        android:layout_height="@dimen/big_circle_radius"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circlr">
                        <RelativeLayout
                            android:layout_width="@dimen/little_circle_radius"
                            android:layout_height="@dimen/little_circle_radius"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/middle_circle_radius"
                            android:layout_marginLeft="@dimen/middle_circle_radius"
                            android:id="@+id/wt"
                            android:background="@drawable/my_account"
                            android:clickable="true" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ques" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="常见问题"
                        android:textColor="#999999"
                        android:textSize="18dp" />
                </LinearLayout>
            </FrameLayout>
            <!--我的设置-->
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0.2dip"
                android:layout_weight="1" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="0.2dip"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="@dimen/big_circle_radius"
                        android:layout_height="@dimen/big_circle_radius"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circlr">
                        <RelativeLayout
                            android:layout_width="@dimen/little_circle_radius"
                            android:layout_height="@dimen/little_circle_radius"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/middle_circle_radius"
                            android:layout_marginLeft="@dimen/middle_circle_radius"
                            android:id="@+id/set"
                            android:background="@drawable/my_account"
                            android:clickable="true" >

                            <ImageView
                                android:id="@+id/setting"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/main_set" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="我的设置"
                        android:textColor="#999999"
                        android:textSize="18dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!--底部-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/menu4"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="小车伴您生活"
            android:textColor="#6c99bb"
            android:textSize="@dimen/title_text_size" />-->
    </RelativeLayout>

</RelativeLayout>