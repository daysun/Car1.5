<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--首部-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#002644"
        android:orientation="vertical"
        android:id="@+id/top">
        <ImageButton
            android:id="@+id/help_img"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/title_btn_bg"
            android:src="@drawable/return_left" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="添加本地小车"
            android:textColor="#6c99bb"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#dedede">
        <!--小车ID-->
        <EditText
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:drawableLeft="@drawable/add_car_txt_id"
            android:drawablePadding="5dp"
            android:hint="请输入小车ID"
            android:id="@+id/car_id"
            android:inputType="number"
            android:padding="5dp"
            />
        <!--car name-->
        <EditText
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:drawableLeft="@drawable/add_car_txt_id"
            android:drawablePadding="5dp"
            android:id="@+id/car_name"
            android:hint="请输入小车名称"
            android:padding="5dp"
            />
        <!--下一步-->
        <RelativeLayout
            android:id="@+id/btn_next"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:clickable="true" >
            <TextView
                android:id="@+id/confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="下一步"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </RelativeLayout>
        </LinearLayout>
</LinearLayout>